<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rlRegister">
            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                android:id="@+id/foodLogo"
                android:layout_width="325dp"
                android:layout_height="433dp"
                android:layout_marginStart="164dp"
                android:layout_marginTop="-113dp"
                android:src="@drawable/foodpic" />
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:id="@+id/btnBack"
                    android:src="@drawable/ic_action_name"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="10dp"/>


            </androidx.coordinatorlayout.widget.CoordinatorLayout>
            <!--include
                android:id="@+id/toolbar"
                layout="@layout/toolbar"/>
                -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="46dp"
                android:layout_marginTop="210dp"
                android:fontFamily="@font/mistral"
                android:text="Muffle"
                android:textColor="#E7415C"
                android:textSize="80sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="325dp"
                android:text="Register yourself!"
                android:textSize="24sp"
                android:fontFamily="@font/gadugi"
                android:textColor="@android:color/black"/>

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46dp"
                android:background="@drawable/text_box"
                android:layout_marginTop="375dp"
                android:layout_marginRight="46dp"
                android:hint="@string/enter_name"
                android:padding="10dip"
                android:singleLine="true"
                android:fontFamily="@font/gadugi"
                android:drawableLeft="@drawable/ic_action_person"
                android:drawablePadding="3dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etName"
                android:background="@drawable/text_box"
                android:layout_marginLeft="46dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="46dp"
                android:drawableLeft="@drawable/ic_action_email"
                android:drawablePadding="3dp"
                android:maxLines="1"
                android:fontFamily="@font/gadugi"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:padding="10dip"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>


            <EditText
                android:id="@+id/etPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_box"
                android:layout_below="@+id/etEmail"
                android:layout_marginLeft="46dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="46dp"
                android:maxLength="10"
                android:drawableLeft="@drawable/ic_action_phone"
                android:drawablePadding="3dp"
                android:maxLines="1"
                android:hint="@string/mobile_number"
                android:inputType="phone"
                android:padding="10dip"
                android:singleLine="true"
                android:fontFamily="@font/gadugi"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_box"
                android:layout_below="@+id/etPhoneNumber"
                android:layout_marginLeft="46dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="46dp"
                android:gravity="top"
                android:drawableLeft="@drawable/ic_action_address"
                android:drawablePadding="3dp"
                android:hint="@string/address"
                android:padding="10dip"
                android:singleLine="true"
                android:fontFamily="@font/gadugi"
                android:textColor="@android:color/black"
                android:textSize="16sp"/>


            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:background="@drawable/text_box"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etAddress"
                android:layout_marginLeft="46dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="46dp"
                android:hint="@string/choose_password"
                android:inputType="numberPassword"
                android:padding="10dip"
                android:maxLength="6"
                android:drawableLeft="@drawable/ic_action_password"
                android:drawablePadding="3dp"
                android:singleLine="true"
                android:fontFamily="@font/gadugi"
                android:textColor="@android:color/black"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_box"
                android:layout_below="@+id/etPassword"
                android:layout_marginLeft="46dp"
                android:layout_marginTop="7dip"
                android:layout_marginRight="46dp"
                android:hint="@string/confirm_password"
                android:inputType="numberPassword"
                android:padding="10dip"
                android:singleLine="true"
                android:maxLength="6"
                android:fontFamily="@font/gadugi"
                android:drawableLeft="@drawable/ic_action_password"
                android:drawablePadding="3dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"/>


            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etConfirmPassword"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="46dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="46dp"
                android:background="@drawable/remove_cart_button_background"
                android:text="@string/registration"
                android:textAllCaps="false"
                android:fontFamily="@font/gadugi"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white"/>
        </RelativeLayout>


        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:visibility="gone"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</ScrollView>